<div class="w-full py-6 px-3">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <a href="{{product_product.url}}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform"
            src="{{product_product.featured_image | image_url: width: 300}}"
            alt="{{product_product.featured_image.alt}}"
          >
        </div>
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
      {% endif %}
    </a>
    <div class="flex flex-col p-4">
      <span class="text-gray-400 font-medium">{{ product_product.vendor }}</span>
      <a class="text-gray-700 uppercase font-medium" href="{{product_product.url}}"> {{ product_product.title }}</a>
      <p class="text-gray-500">{{ product_product.price | money }}</p>
    </div>
  </div>
</div>
