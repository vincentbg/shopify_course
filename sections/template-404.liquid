<div class="max-w-md">
  <div class="text-5xl font-bold my-4">
    {{ section.settings.title }}
    <div class="my-4">
      <p class="text-base md:text-xl leading-normal">
        {{ section.settings.subtext_title }}
      </p>
    </div>
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a
      href="{{ shop_url }}"
      class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white"
    >
      {{ section.settings.button_label -}}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "template 404",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404",
      "label": "404 Heading title"
    },
    {
      "type": "text",
      "id": "subtext_title",
      "default": "the page that youre looking not exist",
      "label": "404 Subtext"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Back to homepage",
      "label": "Bottom label"
    },
    {
      "type": "url",
      "id": "buttom_url",
      "label": "Button url"
    }
  ]
}
{% endschema %}
